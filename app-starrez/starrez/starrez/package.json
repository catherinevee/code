{
  "name": "college-website",
  "version": "1.0.0",
  "description": "Interactive college website with Tailwind CSS",
  "scripts": {
    "build-css": "postcss src/css/input.css -o dist/css/styles.css",
    "watch-css": "postcss src/css/input.css -o dist/css/styles.css --watch",
    "build-css:prod": "NODE_ENV=production postcss src/css/input.css -o dist/css/styles.css",
    "dev": "npm run watch-css",
    "build": "npm run build-css:prod"
  },
  "devDependencies": {
    "tailwindcss": "^3.3.0",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.0",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "postcss": "^8.4.0",
    "postcss-cli": "^10.1.0",
    "autoprefixer": "^10.4.0",
    "postcss-import": "^15.1.0",
    "cssnano": "^6.0.0",
    "@fullhuman/postcss-purgecss": "^5.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}